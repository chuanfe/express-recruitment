extends ../layout

block content
  .container
    .row
        .col-md-7
          embed(src="#{job.img}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="application/x-shockwave-flash")
        .col-md-5
          dl.dl-horizontal
            dt 电影名字
            dd= job.name
            dt 导演
            dd= job.min_salary
            dt 国家
            dd= job.max_salary
            dt 语言
            dd= job.district
            dt 上映年份
            dd= job.description
            dt 简介
            dd= job.company_intro