extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/job/new")
        input(type="hidden", name="job[_id]", value="#{job._id}")
        .form-group
            label.col-sm-3.control-label(for="inputTitle") 职位名称
            .col-sm-10
              input#inputTitle.form-control(type="text", name="job[name]", value="#{job.name}")
        .form-group
            label.col-sm-3.control-label(for="inputTitle") 公司名称
            .col-sm-10
              input#inputTitle.form-control(type="text", name="job[company]", value="#{job.company}")
        .form-group
            label.col-sm-3.control-label(for="inputDoctor") 最低工资
            .col-sm-10
              input#inputDoctor.form-control(type="text", name="job[min_salary]", value="#{job.min_salary}")
        .form-group
            label.col-sm-3.control-label(for="inputCountry") 最高工资
            .col-sm-10
              input#inputCountry.form-control(type="text", name="job[max_salary]", value="#{job.max_salary}")
        .form-group
            label.col-sm-3.control-label(for="inputLanguage") 图片地址
            .col-sm-10
              input#inputLanguage.form-control(type="text", name="job[img]", value="#{job.img}")
        .form-group
            label.col-sm-3.control-label(for="inputPoster") 工作地址
            .col-sm-10
              input#inputPoster.form-control(type="text", name="job[district]", value="#{job.district}")
        .form-group
            label.col-sm-3.control-label(for="inputTitle") 工作描述
            .col-sm-10
              input#inputTitle.form-control(type="text", name="job[description]", value="#{job.description}")
        .form-group
            label.col-sm-3.control-label(for="inputYear") 工作要求
            .col-sm-10
              input#inputYear.form-control(type="text", name="job[requirement]", value="#{job.requirement}")
        .form-group
            label.col-sm-3.control-label(for="inputSummary") 公司简介
            .col-sm-10
              input#inputSummary.form-control(type="text", name="job[company_intro]", value="#{job.company_intro}")
        .form-group
          .clo-sm-offset-2.col-sm-10
          button.btn.btn-default(type="submit")录入